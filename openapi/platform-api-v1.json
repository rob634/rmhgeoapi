        "operationId": "stacSearch",
        "tags": [
          "STAC"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/STACSearchRequest"
              },
              "example": {
                "collections": ["my-collection"],
                "bbox": [-180, -90, 180, 90],
                "datetime": "2024-01-01/2024-12-31",
                "limit": 10
              }
            }
          }
        },
        "responses": {
          "200": {
